<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HostelManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HostelManagementSystem.styles.css" asp-append-version="true" />

    <style>
        body {
            background: #f5f5f5;
            overflow-x: hidden;
        }

        /* Sidebar */
        .sidebar {
            width: 260px;
            height: 100vh;
            background: #1b1b1b;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 20px;
            color: white;
            overflow-y: auto;
            overflow-x: hidden;
        }

            .sidebar h2 {
                text-align: center;
                font-weight: bold;
                margin-bottom: 2rem;
            }

            .sidebar a, .sidebar button {
                display: block;
                padding: 12px 20px;
                color: #ddd;
                text-decoration: none;
                margin-bottom: 5px;
                transition: 0.2s;
                width: 100%;
                text-align: left;
                border: none;
                background: none;
            }

                .sidebar a:hover, .sidebar .active, .sidebar button:hover {
                    background: #333;
                    color: #fff;
                }

            .sidebar::-webkit-scrollbar {
                width: 8px;
            }

            .sidebar::-webkit-scrollbar-thumb {
                background: #555;
                border-radius: 4px;
            }

                .sidebar::-webkit-scrollbar-thumb:hover {
                    background: #333;
                }

        /* Content */
        .content {
            margin-left: 260px;
            padding: 20px;
        }

        /* Navbar */
        .top-navbar {
            background: white;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h2>HOSTEL ADMIN</h2>

        <a asp-controller="Admin" asp-action="Dashboard">📊 Dashboard</a>

        <div>
            <button data-bs-toggle="collapse" data-bs-target="#studentMenu">👨‍🎓 Student Management</button>
            <div class="collapse" id="studentMenu">
                <a asp-controller="Student" asp-action="Index" class="ps-4 py-1">All Students</a>
                <a asp-controller="Student" asp-action="Register" class="ps-4 py-1">Add Student</a>
                <a asp-controller="Student" asp-action="Assignments" class="ps-4 py-1">Room Assignment</a>
            </div>
        </div>

        <div>
            <button data-bs-toggle="collapse" data-bs-target="#roomMenu">🛏 Room Allocation</button>
            <div class="collapse" id="roomMenu">
                <a asp-controller="RoomAllocation" asp-action="Index" class="ps-4 py-1">All Rooms</a>
                <a asp-controller="RoomAllocation" asp-action="QueueList" class="ps-4 py-1">Add Room</a>
                <a asp-controller="RoomAllocation" asp-action="AllocateRoom" class="ps-4 py-1">Room Availability</a>
            </div>
        </div>

        <div>
            <button data-bs-toggle="collapse" data-bs-target="#hostelMenu">🏢 Attendance Management</button>
            <div class="collapse" id="hostelMenu">
                <a asp-controller="Attendance" asp-action="Index" class="ps-4 py-1">Attendance Tracker</a>
                <a asp-controller="Hostel" asp-action="Facilities" class="ps-4 py-1">Manage Facilities</a>
            </div>
        </div>

        <div>
            <button data-bs-toggle="collapse" data-bs-target="#complaintMenu">📝 Complaint Management</button>
            <div class="collapse" id="complaintMenu">
                <a asp-controller="Complaints" asp-action="Queue" class="ps-4 py-1">All Complaints</a>
                <a asp-controller="Complaint" asp-action="Submit" class="ps-4 py-1">Submit Complaints</a>
                <a asp-controller="Complaint" asp-action="Pending" class="ps-4 py-1">Pending Complaints</a>
            </div>
        </div>

        <div>
            <button data-bs-toggle="collapse" data-bs-target="#paymentMenu">💳 Payments & Fees</button>
            <div class="collapse" id="paymentMenu">
                <a asp-controller="Payment" asp-action="Index" class="ps-4 py-1">All Payments</a>
                <a asp-controller="Payment" asp-action="Pending" class="ps-4 py-1">Pending Dues</a>
                <a asp-controller="Payment" asp-action="History" class="ps-4 py-1">Payment History</a>
            </div>
        </div>

        <div>
            <button data-bs-toggle="collapse" data-bs-target="#staffMenu">👷 Staff Management</button>
            <div class="collapse" id="staffMenu">
                <a asp-controller="Staff" asp-action="Index" class="ps-4 py-1">All Staff</a>
                <a asp-controller="Staff" asp-action="Create" class="ps-4 py-1">Add Staff</a>
            </div>
        </div>

        <div>
            <button data-bs-toggle="collapse" data-bs-target="#settingsMenu">⚙ Settings</button>
            <div class="collapse" id="settingsMenu">
                <a asp-controller="Settings" asp-action="General" class="ps-4 py-1">General Settings</a>
                <a asp-controller="Settings" asp-action="Security" class="ps-4 py-1">Security</a>
            </div>
        </div>

        <a asp-controller="Auth" asp-action="Logout" class="btn btn-danger mt-3 w-100">🚪 Logout</a>
    </div>

    <!-- Main content -->
    <div class="content">
        <div class="top-navbar d-flex justify-content-between align-items-center">
            <h4 class="m-0">@ViewData["Title"]</h4>
            <div>
                <span class="me-2">Admin</span>
                <img src="/images/admin.png" width="40" class="rounded-circle" />
            </div>
        </div>

        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

