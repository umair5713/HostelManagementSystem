@{
    ViewBag.Title = "Admin Dashboard";
}
@{
    
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Admin Dashboard</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            background: #f5f5f5;
            overflow-x: hidden;
        }

        /* Sidebar */
        .sidebar {
            width: 260px;
            height: 100vh;
            background: #1b1b1b;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 20px;
            color: white;
            /* Enable sidebar scrolling */
            overflow-y: auto;
            overflow-x: hidden;
        }

            /* Sidebar Title */
            .sidebar h5 {
                text-align: center;
                font-weight: bold;
                margin-bottom: 2rem;
            }

            /* Sidebar Links */
            .sidebar a {
                display: block;
                padding: 12px 20px;
                color: #ddd;
                text-decoration: none;
                margin-bottom: 5px;
                transition: 0.2s;
            }

                .sidebar a:hover,
                .sidebar .active {
                    background: #333;
                    color: #fff;
                }

            /* Custom Scrollbar */
            .sidebar::-webkit-scrollbar {
                width: 8px;
            }

            .sidebar::-webkit-scrollbar-thumb {
                background: #555;
                border-radius: 4px;
            }

                .sidebar::-webkit-scrollbar-thumb:hover {
                    background: #333;
                }
        /* Content */
        .content {
            margin-left: 260px;
            padding: 20px;
        }

        /* Navbar */
        .top-navbar {
            background: white;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
            margin-bottom: 20px;
        }

        /* Cards */
        .dashboard-card {
            border-radius: 12px;
            padding: 20px;
            background: white;
            text-align: center;
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        }

            .dashboard-card h3 {
                font-weight: bold;
                margin-bottom: 10px;
            }

            .dashboard-card p {
                color: gray;
            }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div class="sidebar bg-dark text-white p-3" style="width:250px; min-height:100vh;">
        <h2 class="mb-4">HOSTEL ADMIN</h2>

        <!-- Dashboard -->
        <a asp-controller="Admin" asp-action="Dashboard" class="btn btn-dark w-100 text-start mb-2">
            📊 Dashboard
        </a>

        <!-- Student Management -->
        <div class="mb-2">
            <button class="btn btn-dark w-100 text-start" data-bs-toggle="collapse" data-bs-target="#studentMenu">
                👨‍🎓 Student Management
            </button>
            <div class="collapse" id="studentMenu">
                <a asp-controller="Student" asp-action="Index" class="d-block text-white ps-4 py-1">All Students</a>
                <a asp-controller="Student" asp-action="Create" class="d-block text-white ps-4 py-1">Add Student</a>
                <a asp-controller="Student" asp-action="Assignments" class="d-block text-white ps-4 py-1">Room Assignment</a>
            </div>
        </div>

        <!-- Room Management -->
        <div class="mb-2">
            <button class="btn btn-dark w-100 text-start" data-bs-toggle="collapse" data-bs-target="#roomMenu">
                🛏 Room Management
            </button>
            <div class="collapse" id="roomMenu">
                <a asp-controller="Room" asp-action="Index" class="d-block text-white ps-4 py-1">All Rooms</a>
                <a asp-controller="Room" asp-action="Create" class="d-block text-white ps-4 py-1">Add Room</a>
                <a asp-controller="Room" asp-action="Availability" class="d-block text-white ps-4 py-1">Room Availability</a>
            </div>
        </div>

        <!-- Hostel Management -->
        <div class="mb-2">
            <button class="btn btn-dark w-100 text-start" data-bs-toggle="collapse" data-bs-target="#hostelMenu">
                🏢 Attendance Management
            </button>
            <div class="collapse" id="hostelMenu">
                <a asp-controller="Attendance" asp-action="Index" class="d-block text-white ps-4 py-1">Attendance Tracker</a>
                <a asp-controller="Hostel" asp-action="Facilities" class="d-block text-white ps-4 py-1">Manage Facilities</a>
            </div>
        </div>

        <!-- Complaints -->
        <div class="mb-2">
            <button class="btn btn-dark w-100 text-start" data-bs-toggle="collapse" data-bs-target="#complaintMenu">
                📝 Complaint Management
            </button>
            <div class="collapse" id="complaintMenu">
                <a asp-controller="Complaint" asp-action="Index" class="d-block text-white ps-4 py-1">All Complaints</a>
                <a asp-controller="Complaint" asp-action="Pending" class="d-block text-white ps-4 py-1">Pending Complaints</a>
                <a asp-controller="Complaint" asp-action="Resolved" class="d-block text-white ps-4 py-1">Resolved Complaints</a>
            </div>
        </div>

        <!-- Payments -->
        <div class="mb-2">
            <button class="btn btn-dark w-100 text-start" data-bs-toggle="collapse" data-bs-target="#paymentMenu">
                💳 Payments & Fees
            </button>
            <div class="collapse" id="paymentMenu">
                <a asp-controller="Payment" asp-action="Index" class="d-block text-white ps-4 py-1">All Payments</a>
                <a asp-controller="Payment" asp-action="Pending" class="d-block text-white ps-4 py-1">Pending Dues</a>
                <a asp-controller="Payment" asp-action="History" class="d-block text-white ps-4 py-1">Payment History</a>
            </div>
        </div>

        <!-- Staff -->
        <div class="mb-2">
            <button class="btn btn-dark w-100 text-start" data-bs-toggle="collapse" data-bs-target="#staffMenu">
                👷 Staff Management
            </button>
            <div class="collapse" id="staffMenu">
                <a asp-controller="Staff" asp-action="Index" class="d-block text-white ps-4 py-1">All Staff</a>
                <a asp-controller="Staff" asp-action="Create" class="d-block text-white ps-4 py-1">Add Staff</a>
            </div>
        </div>

        <!-- Settings -->
        <div class="mb-2">
            <button class="btn btn-dark w-100 text-start" data-bs-toggle="collapse" data-bs-target="#settingsMenu">
                ⚙ Settings
            </button>
            <div class="collapse" id="settingsMenu">
                <a asp-controller="Settings" asp-action="General" class="d-block text-white ps-4 py-1">General Settings</a>
                <a asp-controller="Settings" asp-action="Security" class="d-block text-white ps-4 py-1">Security</a>
            </div>
        </div>

        <!-- Logout -->
        <a asp-controller="Auth" asp-action="Logout" class="btn btn-danger w-100 mt-3">🚪 Logout</a>
    </div>


    <!-- Main content -->
    <div class="content">

        <!-- Top Navbar -->
        <div class="top-navbar d-flex justify-content-between align-items-center">
            <h4 class="m-0">Dashboard</h4>
            <div>
                <span class="me-2">Admin</span>
                <img src="/images/admin.png" width="40" class="rounded-circle" />
            </div>
        </div>

        <!-- Dashboard Cards -->
        <div class="row g-4">
            <div class="col-md-3">
                <div class="dashboard-card">
                    <h3>120</h3>
                    <p>Total Students</p>
                </div>
            </div>

            <div class="col-md-3">
                <div class="dashboard-card">
                    <h3>45</h3>
                    <p>Available Rooms</p>
                </div>
            </div>

            <div class="col-md-3">
                <div class="dashboard-card">
                    <h3>12</h3>
                    <p>Pending Complaints</p>
                </div>
            </div>

            <div class="col-md-3">
                <div class="dashboard-card">
                    <h3>₹ 52,000</h3>
                    <p>Total Payments</p>
                </div>
            </div>
        </div>

    </div>

</body>
</html>

