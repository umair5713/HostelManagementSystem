@model HostelManagementSystem.Models.Student

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container mt-5 text-center">

    <h2 class="mb-4">🏠 Room Allocation Result</h2>

    @if (Model == null)
    {
        <div class="alert alert-warning p-3">
            No students are currently waiting in the queue.
        </div>
    }
    else
    {
        <div class="alert alert-success p-4">
            <h4>🎉 Room Successfully Allocated!</h4>
            <p><strong>@Model.StudentName</strong> has been allocated <strong>Room @Model.RoomNo</strong>.</p>
        </div>
    }

    <a href="/RoomAllocation/QueueList" class="btn btn-primary btn-lg mt-3">🔙 Back to Queue</a>

</div>
