@model HostelManagementSystem.Models.Student

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<style>
    body {
        background: #f4f6f9;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .result-card {
        max-width: 500px;
        margin: 50px auto;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .result-header {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: white;
        padding: 25px;
        font-size: 1.5rem;
        font-weight: 600;
        text-align: center;
    }

    .result-body {
        padding: 30px;
        text-align: center;
    }

        .result-body h4 {
            font-size: 1.4rem;
            margin-bottom: 15px;
        }

        .result-body p {
            font-size: 1.1rem;
            color: #555;
        }

    .btn-modern {
        background: #2575fc;
        color: white;
        font-weight: 500;
        padding: 10px 25px;
        border-radius: 50px;
        transition: all 0.3s ease;
    }

        .btn-modern:hover {
            background: #6a11cb;
            color: #fff;
            text-decoration: none;
        }

    .alert-custom {
        border-radius: 12px;
        padding: 20px;
        font-size: 1rem;
    }
</style>

<div class="result-card">

    <div class="result-header">
        🏠 Room Allocation Result
    </div>

    <div class="result-body">
        @if (Model == null)
        {
            <div class="alert alert-warning alert-custom">
                ⚠️ No students are currently waiting in the queue.
            </div>
        }
        else
        {
            <div class="alert alert-success alert-custom">
                🎉 <strong>@Model.StudentName</strong> has been allocated <strong>Room @Model.RoomNo</strong>!
            </div>
        }

        <a href="/RoomAllocation/QueueList" class="btn btn-modern mt-3">🔙 Back to Queue</a>
    </div>

</div>

