@model List<HostelManagementSystem.Models.Student>

@{
    var allStudents = ViewBag.AllStudents as List<HostelManagementSystem.Models.Student>;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<style>
    body {
        background-color: #f4f6f9;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .dashboard-card {
        background: white;
        border-radius: 15px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin-bottom: 30px;
    }

        .dashboard-card h4 {
            font-weight: 600;
            margin-bottom: 20px;
            color: #333;
        }

    table.table {
        border-radius: 10px;
        overflow: hidden;
    }

    .table thead th {
        background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);
        color: white;
        border: none;
    }

    .table tbody tr:hover {
        background-color: #f0f4ff;
        transition: 0.3s;
    }

    .btn-modern {
        border-radius: 50px;
        padding: 8px 20px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn-modern-primary {
        background: #2575fc;
        color: white;
    }

        .btn-modern-primary:hover {
            background: #6a11cb;
            color: white;
        }

    .btn-modern-success {
        background: #28a745;
        color: white;
    }

        .btn-modern-success:hover {
            background: #1e7e34;
            color: white;
        }

    .page-title {
        text-align: center;
        margin-bottom: 40px;
        font-weight: 600;
        color: #333;
    }
</style>

<div class="container mt-5">

    <h2 class="page-title">🛏️ Room Allocation Queue</h2>

    <!-- CURRENT QUEUE CARD -->
    <div class="dashboard-card">
        <h4>Students Waiting for Room</h4>
        <div class="table-responsive">
            <table class="table text-center align-middle mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Requested Room</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Count > 0)
                    {
                        @foreach (var s in Model)
                        {
                            <tr>
                                <td>@s.StudentID</td>
                                <td>@s.StudentName</td>
                                <td>@s.RoomNo</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="3" class="text-muted">No students currently in the queue.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- AVAILABLE STUDENTS CARD -->
    <div class="dashboard-card">
        <h4>Add Student to Queue</h4>
        <div class="table-responsive">
            <table class="table text-center align-middle mb-0">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Name</th>
                        <th>Room No</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var s in allStudents)
                    {
                        <tr>
                            <td>@s.StudentID</td>
                            <td>@s.StudentName</td>
                            <td>@s.RoomNo</td>
                            <td>
                                <form method="post" action="/RoomAllocation/AddToQueue">
                                    <input type="hidden" name="StudentID" value="@s.StudentID" />
                                    <input type="hidden" name="StudentName" value="@s.StudentName" />
                                    <input type="hidden" name="RoomNo" value="@s.RoomNo" />
                                    <input type="hidden" name="FeeStatus" value="@s.FeeStatus" />
                                    <button class="btn btn-modern btn-modern-primary btn-sm">➕ Add</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- ALLOCATE ROOM BUTTON -->
    <div class="text-center my-4">
        <a href="/RoomAllocation/AllocateRoom" class="btn btn-modern btn-modern-success btn-lg">🏠 Allocate Room</a>
    </div>

</div>
