@model List<HostelManagementSystem.Models.Student>

@{
    var allStudents = ViewBag.AllStudents as List<HostelManagementSystem.Models.Student>;
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />

<div class="container mt-5">

    <h2 class="text-center mb-4">🛏️ Room Allocation Queue</h2>

    <!-- CURRENT QUEUE TABLE -->
    <h4>Students Waiting for Room</h4>

    <table class="table table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Requested Room</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model)
            {
                <tr>
                    <td>@s.StudentID</td>
                    <td>@s.StudentName</td>
                    <td>@s.RoomNo</td>
                </tr>
            }
        </tbody>
    </table>

    <hr />

    <!-- AVAILABLE STUDENTS TABLE -->
    <h4>Add Student to Queue</h4>

    <table class="table table-striped text-center">
        <thead class="table-secondary">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Room No</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in allStudents)
            {
                <tr>
                    <td>@s.StudentID</td>
                    <td>@s.StudentName</td>
                    <td>@s.RoomNo</td>
                    <td>
                        <form method="post" action="/RoomAllocation/AddToQueue">
                            <input type="hidden" name="StudentID" value="@s.StudentID" />
                            <input type="hidden" name="StudentName" value="@s.StudentName" />
                            <input type="hidden" name="RoomNo" value="@s.RoomNo" />
                            <input type="hidden" name="FeeStatus" value="@s.FeeStatus" />
                            <button class="btn btn-primary btn-sm">Add to Queue</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center my-4">
        <a href="/RoomAllocation/AllocateRoom" class="btn btn-success btn-lg">🏠 Allocate Room</a>
    </div>

</div>

