@using System.Text.Json
@model HostelManagementSystem.Models.MessDashboardViewModel

@{
    ViewBag.Title = "Mess Management System";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .main-container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .header {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            margin-bottom: 30px;
            text-align: center;
        }

            .header h1 {
                color: #667eea;
                font-size: 2.5em;
                margin-bottom: 10px;
                font-weight: 700;
            }

            .header p {
                color: #666;
                font-size: 1.1em;
            }

        /* Tab Navigation */
        .tab-navigation {
            background: white;
            padding: 0;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.15);
            margin-bottom: 30px;
            overflow: hidden;
        }

        .tab-buttons {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 0;
        }

        .tab-btn {
            padding: 20px;
            background: white;
            border: none;
            border-bottom: 3px solid transparent;
            cursor: pointer;
            font-size: 1.1em;
            font-weight: 600;
            color: #666;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 10px;
        }

            .tab-btn:hover {
                background: #f8f9fa;
                color: #667eea;
            }

            .tab-btn.active {
                color: #667eea;
                border-bottom-color: #667eea;
                background: #f0f4ff;
            }

            .tab-btn .icon {
                font-size: 1.3em;
            }

        /* Tab Content */
        .tab-content {
            display: none;
        }

            .tab-content.active {
                display: block;
                animation: fadeIn 0.3s;
            }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Stats Grid */
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.15);
            transition: transform 0.3s ease;
            position: relative;
            overflow: hidden;
        }

            .stat-card::before {
                content: '';
                position: absolute;
                top: 0;
                left: 0;
                width: 5px;
                height: 100%;
                background: linear-gradient(180deg, #667eea, #764ba2);
            }

            .stat-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 30px rgba(0,0,0,0.25);
            }

            .stat-card h3 {
                color: #666;
                font-size: 0.9em;
                text-transform: uppercase;
                letter-spacing: 1px;
                margin-bottom: 10px;
            }

            .stat-card .value {
                font-size: 2.5em;
                font-weight: 700;
                background: linear-gradient(135deg, #667eea, #764ba2);
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
            }

            .stat-card .icon {
                position: absolute;
                right: 20px;
                top: 50%;
                transform: translateY(-50%);
                font-size: 3em;
                opacity: 0.1;
            }

        /* Menu Grid */
        .menu-section {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.15);
        }

        .menu-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 20px;
        }

        .menu-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 20px;
            border-radius: 10px;
            transition: transform 0.3s ease;
        }

            .menu-card:hover {
                transform: scale(1.05);
            }

            .menu-card .day {
                font-size: 1.4em;
                font-weight: 700;
                margin-bottom: 5px;
            }

            .menu-card .meal-type {
                font-size: 1em;
                opacity: 0.9;
                margin-bottom: 10px;
                font-weight: 600;
            }

            .menu-card .items {
                font-size: 0.9em;
                line-height: 1.5;
                opacity: 0.95;
            }

        /* Filter Section */
        .filter-section {
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.15);
            margin-bottom: 20px;
        }

        .filter-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            align-items: end;
        }

        .form-group {
            display: flex;
            flex-direction: column;
        }

            .form-group label {
                color: #333;
                font-weight: 600;
                margin-bottom: 8px;
            }

            .form-group input,
            .form-group select {
                padding: 12px;
                border: 2px solid #e0e0e0;
                border-radius: 8px;
                font-size: 1em;
                transition: all 0.3s ease;
            }

                .form-group input:focus,
                .form-group select:focus {
                    outline: none;
                    border-color: #667eea;
                    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
                }

        .btn-primary {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 12px 30px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            font-size: 1em;
            transition: all 0.3s ease;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
            }

        /* Table Styles */
        .table-container {
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.15);
            overflow-x: auto;
        }

        .data-table {
            width: 100%;
            border-collapse: collapse;
        }

            .data-table thead {
                background: linear-gradient(135deg, #667eea, #764ba2);
                color: white;
            }

            .data-table th {
                padding: 15px;
                text-align: left;
                font-weight: 600;
                text-transform: uppercase;
                font-size: 0.9em;
            }

            .data-table td {
                padding: 15px;
                border-bottom: 1px solid #f0f0f0;
            }

            .data-table tbody tr:hover {
                background: #f8f9fa;
            }

        .search-box {
            margin-bottom: 20px;
        }

            .search-box input {
                width: 100%;
                padding: 12px 20px;
                border: 2px solid #e0e0e0;
                border-radius: 25px;
                font-size: 1em;
            }

        .status-badge {
            padding: 6px 15px;
            border-radius: 20px;
            font-size: 0.85em;
            font-weight: 600;
            display: inline-block;
        }

        .status-present {
            background: #d4edda;
            color: #155724;
        }

        .status-absent {
            background: #f8d7da;
            color: #721c24;
        }

        .status-paid {
            background: #d4edda;
            color: #155724;
        }

        .status-pending {
            background: #fff3cd;
            color: #856404;
        }

        .status-unpaid {
            background: #f8d7da;
            color: #721c24;
        }

        .btn-action {
            padding: 8px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 0.85em;
            margin: 0 3px;
            transition: all 0.3s ease;
        }

        .btn-present {
            background: #28a745;
            color: white;
        }

        .btn-absent {
            background: #dc3545;
            color: white;
        }

        .btn-view {
            background: #17a2b8;
            color: white;
        }

        .btn-update {
            background: #28a745;
            color: white;
        }

        .btn-action:hover {
            transform: scale(1.05);
            box-shadow: 0 3px 10px rgba(0,0,0,0.2);
        }

        /* Alert */
        .alert {
            padding: 15px 20px;
            border-radius: 8px;
            margin-bottom: 20px;
            display: none;
        }

        .alert-success {
            background: #d4edda;
            color: #155724;
            border: 1px solid #c3e6cb;
        }

        /* Revenue Card */
        .revenue-card {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            margin-bottom: 30px;
            text-align: center;
        }

            .revenue-card h3 {
                font-size: 1.2em;
                margin-bottom: 10px;
                opacity: 0.9;
            }

            .revenue-card .amount {
                font-size: 3em;
                font-weight: 700;
            }

        /* Modal */
        .modal {
            display: none;
            position: fixed;
            z-index: 1000;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
        }

        .modal-content {
            background: white;
            margin: 5% auto;
            padding: 30px;
            border-radius: 15px;
            width: 90%;
            max-width: 600px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.3);
        }

        .modal-header {
            border-bottom: 2px solid #f0f0f0;
            padding-bottom: 15px;
            margin-bottom: 20px;
        }

            .modal-header h2 {
                color: #667eea;
                margin: 0;
            }

        .close-btn {
            float: right;
            font-size: 2em;
            font-weight: 700;
            color: #999;
            cursor: pointer;
        }

            .close-btn:hover {
                color: #333;
            }

        .bill-details .row {
            display: flex;
            justify-content: space-between;
            padding: 10px 0;
            border-bottom: 1px solid #f0f0f0;
        }

            .bill-details .row.total {
                font-weight: 700;
                font-size: 1.2em;
                color: #667eea;
                border-top: 2px solid #667eea;
                margin-top: 10px;
                padding-top: 15px;
            }

        @@media (max-width: 768px) {
            .tab-buttons {
                grid-template-columns: repeat(2, 1fr);
            }

            .stats-grid {
                grid-template-columns: 1fr;
            }

            .menu-grid {
                grid-template-columns: 1fr;
            }

            .filter-grid {
                grid-template-columns: 1fr;
            }

            .data-table {
                min-width: 600px;
            }
        }
    </style>
</head>
<body>
    <div class="main-container">
        <!-- Header -->
        <div class="header">
            <h1>🍽️ Mess Management </h1>
            <p>CampusNest Mess  - @DateTime.Now.ToString("dddd, MMMM dd, yyyy")</p>
        </div>

        <div id="alertBox" class="alert"></div>

        <!-- Tab Navigation -->
        <div class="tab-navigation">
            <div class="tab-buttons">
                <button class="tab-btn active" onclick="openTab(event, 'dashboard')">
                    <span class="icon">📊</span>
                    <span>Dashboard</span>
                </button>
                <button class="tab-btn" onclick="openTab(event, 'menu')">
                    <span class="icon">📅</span>
                    <span>Weekly Menu</span>
                </button>
                <button class="tab-btn" onclick="openTab(event, 'attendance')">
                    <span class="icon">✓</span>
                    <span>Attendance</span>
                </button>
                <button class="tab-btn" onclick="openTab(event, 'billing')">
                    <span class="icon">💳</span>
                    <span>Billing</span>
                </button>
            </div>
        </div>

        <!-- Dashboard Tab -->
        <div id="dashboard" class="tab-content active">
            <div class="stats-grid">
                <div class="stat-card">
                    <h3>Total Students</h3>
                    <div class="value">@Model.TotalStudents</div>
                    <div class="icon">👥</div>
                </div>
                <div class="stat-card">
                    <h3>Present Today</h3>
                    <div class="value">@Model.PresentToday</div>
                    <div class="icon">✅</div>
                </div>
                <div class="stat-card">
                    <h3>Attendance Rate</h3>
                    <div class="value">@(Model.TotalStudents > 0 ? Math.Round((double)Model.PresentToday / Model.TotalStudents * 100, 1) : 0)%</div>
                    <div class="icon">📊</div>
                </div>
                <div class="stat-card">
                    <h3>Today's Revenue</h3>
                    <div class="value">₨@Model.TodayRevenue</div>
                    <div class="icon">💰</div>
                </div>
            </div>

            <div class="menu-section">
                <h2 style="color: #667eea; text-align: center; margin-bottom: 20px;">📋 Today's Menu</h2>
                <div class="menu-grid">
                    @foreach (var item in Model.WeeklyMenu.Where(m => m.Date.Date == DateTime.Today.Date))
                    {
                        <div class="menu-card">
                            <div class="day">@item.Day</div>
                            <div class="meal-type">@item.MealType</div>
                            <div class="items">@item.Items</div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Weekly Menu Tab -->
        <div id="menu" class="tab-content">
            <div class="menu-section">
                <h2 style="color: #667eea; text-align: center; margin-bottom: 30px;">📅 Complete Weekly Menu</h2>
                @{
                    var groupedMenu = Model.WeeklyMenu.GroupBy(m => m.Day).OrderBy(g =>
                    {
                        var days = new[] { "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday" };
                        return Array.IndexOf(days, g.Key);
                    });

                    foreach (var dayGroup in groupedMenu)
                    {
                        <div style="margin-bottom: 30px;">
                            <h3 style="color: #667eea; font-size: 1.5em; margin-bottom: 15px; padding-left: 10px; border-left: 5px solid #667eea;">
                                @dayGroup.Key - @dayGroup.First().Date.ToString("MMMM dd, yyyy")
                            </h3>
                            <div class="menu-grid">
                                @foreach (var meal in dayGroup.OrderBy(m => m.MealType))
                                {
                                    <div class="menu-card">
                                        <div class="day">@(meal.MealType == "Breakfast" ? "🌅" : meal.MealType == "Lunch" ? "☀️" : "🌙")</div>
                                        <div class="meal-type">@meal.MealType</div>
                                        <div class="items">@meal.Items</div>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                }
            </div>
        </div>

        <!-- Attendance Tab -->
        <div id="attendance" class="tab-content">
            <div class="filter-section">
                <div class="filter-grid">
                    <div class="form-group">
                        <label for="attDate">Select Date</label>
                        <input type="date" id="attDate" value="@DateTime.Today.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="form-group">
                        <label for="mealType">Meal Type</label>
                        <select id="mealType">
                            <option value="Breakfast">Breakfast</option>
                            <option value="Lunch" selected>Lunch</option>
                            <option value="Dinner">Dinner</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn-primary" onclick="loadAttendance()">Load Attendance</button>
                    </div>
                </div>
            </div>

            <div class="stats-grid">
                <div class="stat-card">
                    <h3>Total Students</h3>
                    <div class="value" id="attTotalStudents">@Model.TotalStudents</div>
                </div>
                <div class="stat-card">
                    <h3>Present</h3>
                    <div class="value" id="attPresent">0</div>
                </div>
                <div class="stat-card">
                    <h3>Absent</h3>
                    <div class="value" id="attAbsent">@Model.TotalStudents</div>
                </div>
                <div class="stat-card">
                    <h3>Attendance %</h3>
                    <div class="value" id="attPercentage">0%</div>
                </div>
            </div>

            <div class="table-container">
                <div class="search-box">
                    <input type="text" id="searchAttendance" placeholder="🔍 Search by name or roll number..." onkeyup="searchTable('attendanceTable', this.value)" />
                </div>

                <table class="data-table" id="attendanceTable">
                    <thead>
                        <tr>
                            <th>Roll No.</th>
                            <th>Student Name</th>
                            <th>Room No.</th>
                            <th>Status</th>
                            <th>Check-in Time</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="attendanceTableBody">
                        <!-- Will be populated by JavaScript -->
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Billing Tab -->
        <div id="billing" class="tab-content">
            <div class="filter-section">
                <div class="filter-grid">
                    <div class="form-group">
                        <label for="billMonth">Select Month</label>
                        <select id="billMonth">
                            @for (int i = 1; i <= 12; i++)
                            {
                                var monthName = new DateTime(2024, i, 1).ToString("MMMM");
                                var isSelected = i == DateTime.Now.Month;
                                if (isSelected)
                                {
                                    <option value="@i" selected>@monthName</option>
                                }
                                else
                                {
                                    <option value="@i">@monthName</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="billYear">Select Year</label>
                        <select id="billYear">
                            @for (int y = DateTime.Now.Year - 2; y <= DateTime.Now.Year + 1; y++)
                            {
                                var isSelected = y == DateTime.Now.Year;
                                if (isSelected)
                                {
                                    <option value="@y" selected>@y</option>
                                }
                                else
                                {
                                    <option value="@y">@y</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="button" class="btn-primary" onclick="loadBilling()">Load Billing</button>
                    </div>
                </div>
            </div>

            <div class="revenue-card">
                <h3>Total Revenue</h3>
                <div class="amount" id="totalRevenue">₨ 0</div>
            </div>

            <div class="table-container">
                <div class="search-box">
                    <input type="text" id="searchBilling" placeholder="🔍 Search by name or roll number..." onkeyup="searchTable('billingTable', this.value)" />
                </div>

                <table class="data-table" id="billingTable">
                    <thead>
                        <tr>
                            <th>Bill ID</th>
                            <th>Roll No.</th>
                            <th>Student Name</th>
                            <th>Days Present</th>
                            <th>Meal Charges</th>
                            <th>Maintenance</th>
                            <th>Grand Total</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="billingTableBody">
                        <!-- Will be populated by JavaScript -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Bill Details Modal -->
    <div id="billModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <span class="close-btn" onclick="closeModal()">&times;</span>
                <h2>📄 Bill Details</h2>
            </div>
            <div id="billDetails" class="bill-details"></div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Tab Navigation
        function openTab(event, tabName) {
            var tabs = document.getElementsByClassName('tab-content');
            var buttons = document.getElementsByClassName('tab-btn');

            for (var i = 0; i < tabs.length; i++) {
                tabs[i].classList.remove('active');
            }

            for (var i = 0; i < buttons.length; i++) {
                buttons[i].classList.remove('active');
            }

            document.getElementById(tabName).classList.add('active');
            event.currentTarget.classList.add('active');

            if (tabName === 'attendance') {
                loadAttendance();
            } else if (tabName === 'billing') {
                loadBilling();
            }
        }

        // Search Table Function
        function searchTable(tableId, searchTerm) {
            searchTerm = searchTerm.toLowerCase();
            var table = document.getElementById(tableId);
            var rows = table.getElementsByTagName('tbody')[0].getElementsByTagName('tr');

            for (var i = 0; i < rows.length; i++) {
                var text = rows[i].textContent.toLowerCase();
                rows[i].style.display = text.includes(searchTerm) ? '' : 'none';
            }
        }

        // Load Attendance Data
        function loadAttendance() {
            populateAttendanceTable();
        }

        function populateAttendanceTable() {
            var tbody = $('#attendanceTableBody');
            tbody.empty();

            var studentsJson = '@Html.Raw(JsonSerializer.Serialize(HostelManagementSystem.Models.MessDataStore.GetAllStudents()))';
            var students = JSON.parse(studentsJson);

            var presentCount = 0;

            students.forEach(function(student) {
                var isPresent = Math.random() > 0.3;
                if (isPresent) presentCount++;

                var row = `
                    <tr data-student-id="${student.studentId}">
                        <td>${student.rollNumber}</td>
                        <td>${student.name}</td>
                        <td>${student.roomNumber}</td>
                        <td>
                            <span class="status-badge ${isPresent ? 'status-present' : 'status-absent'}">
                                ${isPresent ? 'Present' : 'Absent'}
                            </span>
                        </td>
                        <td class="check-in-time">${isPresent ? new Date().toLocaleTimeString('en-US', {hour: '2-digit', minute: '2-digit'}) : '-'}</td>
                        <td>
                            <button class="btn-action btn-present" onclick="markAttendance(${student.studentId}, true)">✓ Present</button>
                            <button class="btn-action btn-absent" onclick="markAttendance(${student.studentId}, false)">✗ Absent</button>
                        </td>
                    </tr>
                `;
                tbody.append(row);
            });

            $('#attPresent').text(presentCount);
            $('#attAbsent').text(students.length - presentCount);
            $('#attPercentage').text(Math.round((presentCount / students.length) * 100) + '%');
        }

        // Mark Attendance
        function markAttendance(studentId, isPresent) {
            var date = document.getElementById('attDate').value;
            var mealType = document.getElementById('mealType').value;

            $.ajax({
                url: '@Url.Action("MarkAttendance", "Mess")',
                type: 'POST',
                data: {
                    studentId: studentId,
                    date: date,
                    mealType: mealType,
                    isPresent: isPresent
                },
                success: function(response) {
                    if (response.success) {
                        showAlert(response.message, 'success');
                        var row = $(`tr[data-student-id="${studentId}"]`);
                        var badge = row.find('.status-badge');
                        var time = row.find('.check-in-time');

                        if (isPresent) {
                            badge.removeClass('status-absent').addClass('status-present').text('Present');
                            time.text(new Date().toLocaleTimeString('en-US', {hour: '2-digit', minute: '2-digit'}));
                        } else {
                            badge.removeClass('status-present').addClass('status-absent').text('Absent');
                            time.text('-');
                        }
                    }
                }
            });
        }

        // Load Billing Data
        function loadBilling() {
            var billingsJson = '@Html.Raw(JsonSerializer.Serialize(HostelManagementSystem.Models.MessDataStore.GetAllBillings()))';
            var billings = JSON.parse(billingsJson);
            var tbody = $('#billingTableBody');
            tbody.empty();

            var totalRevenue = 0;

            billings.forEach(function(bill) {
                totalRevenue += bill.grandTotal;
                var statusClass = bill.status.toLowerCase();
                var markPaidBtn = bill.status !== 'Paid' ? `<button class="btn-action btn-update" onclick="updatePaymentStatus(${bill.billingId}, 'Paid')">✓ Mark Paid</button>` : '';

                var row = `
                    <tr>
                        <td>#${bill.billingId}</td>
                        <td>${bill.rollNumber}</td>
                        <td>${bill.studentName}</td>
                        <td>${bill.totalDaysPresent}</td>
                        <td>₨ ${bill.totalAmount.toFixed(0)}</td>
                        <td>₨ ${bill.messMaintenanceFee.toFixed(0)}</td>
                        <td><strong>₨ ${bill.grandTotal.toFixed(0)}</strong></td>
                        <td>
                            <span class="status-badge status-${statusClass}">${bill.status}</span>
                        </td>
                        <td>
                            <button class="btn-action btn-view" onclick='viewBillById(${bill.billingId})'>👁️ View</button>
                            ${markPaidBtn}
                        </td>
                    </tr>
                `;
                tbody.append(row);
            });

            $('#totalRevenue').text('₨ ' + totalRevenue.toFixed(0));
            window.allBillings = billings;
        }

        function viewBillById(billingId) {
            var bill = window.allBillings.find(b => b.billingId === billingId);
            if (bill) {
                viewBill(bill);
            }
        }

        // View Bill Details
        function viewBill(bill) {
            var monthNames = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
            var monthName = monthNames[bill.month - 1];

            var detailsHTML = `
                <div class="row">
                    <span>Bill ID:</span>
                    <span><strong>#${bill.billingId}</strong></span>
                </div>
                <div class="row">
                    <span>Student Name:</span>
                    <span><strong>${bill.studentName}</strong></span>
                </div>
                <div class="row">
                    <span>Roll Number:</span>
                    <span><strong>${bill.rollNumber}</strong></span>
                </div>
                <div class="row">
                    <span>Billing Period:</span>
                    <span><strong>${monthName} ${bill.year}</strong></span>
                </div>
                <div class="row">
                    <span>Total Days Present:</span>
                    <span><strong>${bill.totalDaysPresent} meals</strong></span>
                </div>
                <div class="row">
                    <span>Per Meal Charge:</span>
                    <span>₨ ${bill.perMealCharge.toFixed(2)}</span>
                </div>
                <div class="row">
                    <span>Meal Charges:</span>
                    <span>₨ ${bill.totalAmount.toFixed(2)}</span>
                </div>
                <div class="row">
                    <span>Mess Maintenance Fee:</span>
                    <span>₨ ${bill.messMaintenanceFee.toFixed(2)}</span>
                </div>
                <div class="row total">
                    <span>Grand Total:</span>
                    <span>₨ ${bill.grandTotal.toFixed(2)}</span>
                </div>
                <div class="row">
                    <span>Payment Status:</span>
                    <span><span class="status-badge status-${bill.status.toLowerCase()}">${bill.status}</span></span>
                </div>
            `;

            document.getElementById('billDetails').innerHTML = detailsHTML;
            document.getElementById('billModal').style.display = 'block';
        }

        // Update Payment Status
        function updatePaymentStatus(billingId, status) {
            if (!confirm(`Are you sure you want to mark this bill as ${status}?`)) {
                return;
            }

            $.ajax({
                url: '@Url.Action("UpdatePaymentStatus", "Mess")',
                type: 'POST',
                data: {
                    billingId: billingId,
                    status: status
                },
                success: function(response) {
                    if (response.success) {
                        showAlert(response.message, 'success');
                        setTimeout(() => loadBilling(), 1000);
                    } else {
                        alert(response.message);
                    }
                },
                error: function() {
                    alert('An error occurred. Please try again.');
                }
            });
        }

        // Close Modal
        function closeModal() {
            document.getElementById('billModal').style.display = 'none';
        }

        // Close modal when clicking outside
        window.onclick = function(event) {
            var modal = document.getElementById('billModal');
            if (event.target == modal) {
                modal.style.display = 'none';
            }
        }

        // Show Alert
        function showAlert(message, type) {
            var alertBox = document.getElementById('alertBox');
            alertBox.className = `alert alert-${type}`;
            alertBox.textContent = message;
            alertBox.style.display = 'block';

            setTimeout(() => {
                alertBox.style.display = 'none';
            }, 3000);
        }

        // Initialize on page load
        $(document).ready(function() {
            populateAttendanceTable();
            loadBilling();
        });
    </script>
</body>
