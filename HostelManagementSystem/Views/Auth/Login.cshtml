@using HostelManagementSystem.Models;
@model User
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            margin: 0;
            height: 100vh;
            display: flex;
        }

        .left-panel {
            flex: 1;
            background: url('https://images.unsplash.com/photo-1507525428034-b723cf961d3e?ixlib=rb-4.0.3&auto=format&fit=crop&w=900&q=80') no-repeat center center/cover;
            display: flex;
            flex-direction: column;
            justify-content: flex-end;
            color: white;
            padding: 3rem;
        }

            .left-panel h1 {
                font-size: 2.5rem;
                font-weight: bold;
            }

        .right-panel {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: center;
            background: #fff;
        }

        .login-box {
            width: 100%;
            max-width: 400px;
        }

        .form-control {
            height: 50px;
            border-radius: 10px;
            margin-bottom: 1rem;
        }

        .btn-custom {
            height: 50px;
            border-radius: 10px;
            background: black;
            color: white;
            font-weight: 600;
        }

            .btn-custom:hover {
                background: #333;
            }

        .google-btn {
            height: 50px;
            border-radius: 10px;
            border: 1px solid #ddd;
            background: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 500;
        }

            .google-btn img {
                width: 20px;
                margin-right: 8px;
            }
    </style>
</head>
<body>

    <!-- Left Side -->
    <div class="left-panel">

        <h1>Welcome to Hostel Management System</h1>
    </div>

    <!-- Right Side -->
    <div class="right-panel">
        <div class="login-box">
            <div class="text-center mb-4">
                <h2>Login</h2>
                <p class="text-muted">Enter your email and password to access your account</p>
            </div>

            <form method="post" asp-action="Login" asp-controller="Auth">
                <input type="email" name="email" class="form-control" placeholder="Enter your email" required />
                <input type="password" name="password" class="form-control" placeholder="Enter your password" required />

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div>
                        <input type="checkbox" id="remember" />
                        <label for="remember"> Remember me</label>
                    </div>
                    <a href="#">Forgot Password?</a>
                </div>

                <button type="submit" class="btn btn-custom w-100">Sign In</button>
            </form>

            <div class="mt-3 text-center">
                <small>Don't have an account? <a asp-action="Signup" asp-controller="Auth">Sign up</a></small>
            </div>
        </div>
    </div>

</body>
</html>
