@model HostelManagementSystem.Models.Student

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

<style>
    body {
        background: linear-gradient(135deg, #eef2f3 0%, #8e9eab 100%);
        min-height: 100vh;
    }

    .register-card {
        max-width: 550px;
        margin: auto;
        border-radius: 20px;
        padding: 35px;
        background: rgba(255, 255, 255, 0.87);
        backdrop-filter: blur(10px);
        box-shadow: 0px 10px 25px rgba(0, 0, 0, 0.15);
        margin-top: 50px;
    }

    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.15rem rgba(13, 110, 253, 0.25);
    }
</style>

<div class="register-card">

    <h2 class="text-center fw-bold mb-3">
        <i class="bi bi-person-plus-fill text-primary"></i> Register Student
    </h2>
    <p class="text-center text-muted mb-4">
        Add a new student to the Hostel Management System.
    </p>

    <form method="post" action="/Student/Register">

        <!-- STUDENT ID -->
        <div class="mb-3">
            <label class="form-label fw-semibold"><i class="bi bi-key"></i> Student ID</label>
            <input type="number" class="form-control" name="StudentID" placeholder="Enter student ID" required />
        </div>

        <!-- STUDENT NAME -->
        <div class="mb-3">
            <label class="form-label fw-semibold"><i class="bi bi-person"></i> Student Name</label>
            <input type="text" class="form-control" name="StudentName" placeholder="Enter full name" required />
        </div>

        <!-- ROOM NUMBER -->
        <div class="mb-3">
            <label class="form-label fw-semibold"><i class="bi bi-door-open"></i> Room Number</label>
            <input type="number" class="form-control" name="RoomNo" placeholder="Enter room number" required />
        </div>

        <!-- FEE STATUS -->
        <div class="mb-3">
            <label class="form-label fw-semibold"><i class="bi bi-cash"></i> Fee Status</label>
            <select class="form-select" name="FeeStatus" required>
                <option value="">Select Fee Status</option>
                <option value="true">Paid</option>
                <option value="false">Unpaid</option>
            </select>
        </div>

        <button class="btn btn-primary w-100 py-2 fw-semibold shadow-sm">
            <i class="bi bi-check-circle"></i> Register Student
        </button>
    </form>

    <a href="/Student/Index" class="btn btn-outline-secondary w-100 mt-3">
        <i class="bi bi-arrow-left"></i> Back to List
    </a>

</div>


